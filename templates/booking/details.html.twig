{% extends '_templates/base.html.twig' %}
{% set module = 'bookings' %}

{% block title %}Booking Details{% endblock %}

{% block body %}

    <h1 class="h1 text-center">Booking Details</h1>

    <div class="p-3 bg-light border border-primary rounded">
        <div>
            <div class="d-flex flex-column m-4 text-center fs-4">
                <p>Booked for: {{ booking.user.userIdentifier }}</p>
                <p>Booked Resource: {{ booking.bookable.code }}</p>
                <p>Booking Confirmation: {{ booking.confirmation }}</p>
                <p>Starting Date: {{ booking.startDate | date('d/m/Y') }}</p>
                <p>End Date: {{ booking.endDate | date('d/m/Y') }}</p>
            </div>
        </div>
        <div class="row justify-content-center m-3">
            <a href="{{ path('app_booking_showallbookings') }}" class="btn btn-primary btn-lg col-3 bg-primary">To all bookings</a>
        </div>
    </div>

{% endblock %}
