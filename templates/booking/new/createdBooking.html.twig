{% extends '_templates/base.html.twig' %}

{% block title %}Confirmation{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-3 text-center">New Booking</h1>

    <div class="row">
        <nav class="my-4 col-12 d-flex justify-content-around" aria-label="breadcrumb">
            <div class="d-flex py-2 px-3 border rounded">
                <ol class="breadcrumb m-0 justify-content-center">
                    <li class="breadcrumb-item">Create</li>
                    <li class="breadcrumb-item">Confirm</li>
                    <li class="breadcrumb-item active">Created</li>
                </ol>
            </div>
        </nav>
    </div>

    <div class="border border-primary bg-light rounded p-3">
        <div>
            <h2 class="text-center">Booking Details</h2>
            <div class="d-flex flex-column m-4 text-center fs-4">
                <p>Booked Resource: {{ booking.bookable.code }}</p>
                <p>Booking Confirmation: {{ booking.confirmation }}</p>
                <p>Starting Date: {{ booking.startDate | date('d-m-Y') }}</p>
                <p>End Date: {{ booking.endDate | date('d-m-Y') }}</p>
            </div>
        </div>
        <div class="row justify-content-center m-3">
            <a href="{{ path('app_office_overview') }}" class="btn btn-primary btn-lg col-3 bg-primary" id="submitBtn">To Overview</a>
        </div>
    </div>

{% endblock %}



