{% extends '_templates/base.html.twig' %}
{% set module = 'bookings' %}

{% block title %}Edit Booking{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-3 text-center">Edit Booking</h1>

    {% include "booking/edit/_parts/_editBreadCrumb.html.twig" with { 'editStage': '1' } %}

    <form class="form border border-primary bg-light rounded p-3" action="{{ path('app_booking_processeditbookingandshowconfirmation') }}" method="post">

        <input type="hidden" name="bookingId" value="{{ booking.id }}">
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('confirmEditBooking') }}"
        >

        <div class="form-floating m-3">
            <select class="form-select" id="allBookables" disabled>
                <option value="{{ bookable.id }}"> {{ bookable.code }}</option>
            </select>
            <input type="hidden" value="{{ bookable.id }}" name="bookable" />
            <label for="allBookables">Available Bookables</label>
        </div>
        <div class="form-floating m-3">
            <input class="form-control" type="date" id="fromDate" value="{{ fromDate | date('Y-m-d') }}" disabled>
            <input type="hidden" value="{{ fromDate | date('Y-m-d') }}" name="fromDate" />
            <label for="fromDate">From Date</label>
        </div>
        <div class="form-floating m-3">
            <input class="form-control" type="date" name="toDate" id="toDate" value="{{ toDate | date('Y-m-d') }}" disabled>
            <input type="hidden" value="{{ toDate | date('Y-m-d') }}" name="toDate" />
            <label for="toDate">To Date</label>
        </div>

        <div class="row justify-content-center m-3">
            <a href="#" class="btn btn-outline-primary btn-lg col-2 m-2" onclick="javascript: window.history.back();">Modify</a>
            <button type="submit" class="btn btn-primary btn-lg col-2 bg-primary m-2" id="submitBtn">Confirm</button>
        </div>

    </form>
{% endblock %}



