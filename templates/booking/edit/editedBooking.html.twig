{% extends '_templates/base.html.twig' %}
{% set module = 'bookings' %}

{% block title %}Confirmation{% endblock %}

{% block body %}
    <h1 class="mt-4 mb-3 text-center">Edit Booking</h1>

    {% include "booking/edit/_parts/_editBreadCrumb.html.twig" with { 'editStage': '2' } %}

    <div class="border border-primary bg-light rounded p-3">
        <div>
            <h2 class="text-center">Edited Booking Details</h2>
            <div class="d-flex flex-column m-4 text-center fs-4">
                <p>Booked Resource: {{ booking.bookable.code }}</p>
                <p>Booking Confirmation: {{ booking.confirmation }}</p>
                <p>Starting Date: {{ booking.startDate | date('d-m-Y') }}</p>
                <p>End Date: {{ booking.endDate | date('d-m-Y') }}</p>
            </div>
        </div>
        <div class="row justify-content-center m-3">
            <a href="{{ path('app_booking_showallbookings') }}" class="btn btn-primary btn-lg col-3 bg-primary" id="submitBtn">To Bookings</a>
        </div>
    </div>

{% endblock %}



