{% extends '_templates/base.html.twig' %}
{% set module = 'admin' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}

    <h1 class="mt-4 mb-3 text-center">Edit Unavailable Dates</h1>

    <div class="p-3 bg-light rounded border border-primary border-1">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_help(form) }}
        {{ form_rest(form) }}
        <div class="d-flex justify-content-center">
            <a class="btn btn-primary bg-light m-3" href="{{ path('app_admin_showbookablemanagerpage') }}">Return</a>
            <button id="submitBtn" class="btn btn-primary m-3" type="submit">Edit</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}