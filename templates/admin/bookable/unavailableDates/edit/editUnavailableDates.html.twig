{% extends '_templates/base.html.twig' %}
{% set module = 'admin' %}

{% block title %}Admin Panel{% endblock %}

{% block body %}

    <h1 class="mt-4 mb-3 text-center">Create Unavailable Dates</h1>

    {% include "_parts/breadcrumbs/_editUnavailableDatesBreadCrumb.html.twig" with { 'createStage': 0 } %}

    {% include "_parts/forms/_inputEditUnavailableDatesFrom.html.twig" with {
        'action': path('app_unavailabledates_showconfirmeditunavailabledatespage', { 'id': unavailableDate.id }),
        'hasErrors': true,
        'errors': errors,
        'hasCsrf': true,
        'csrfName': '_csrf_token',
        'csrfValue': csrf_token('editUnavailableDates'),
        'unavailableDate': unavailableDate,
        'todaysDate': todaysDate,
        'fromDate': fromDate,
        'toDate': toDate,
        'returnTo': 'window.history.back();',
        'returnLbl': 'Return',
        'submitLbl': 'Edit'
    } %}

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('editUnavailableDates') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('editUnavailableDates') }}
{% endblock %}