{% set currentDate = 'now'|date_modify('midnight')|date() %}

<form class="form border border-primary bg-light rounded p-3" id="newUnavailableDateForm" action="{{ action }}" method="post">

    {% include '_parts/errors/_error_bus_display.html.twig' %}

    <input type="hidden" name="_csrf_token" value="{{ csrfValue }}">

    <div class="form-floating m-3">
        <select class="form-select" name="bookable" id="allBookables">

            {% for bookable in allBookables %}
                <option value="{{ bookable.id }}" > {{ bookable.code }}</option>
            {% endfor %}

        </select>
        <label for="allBookables">Available Bookables</label>
    </div>

    <div class="form-floating m-3">
        <input class="form-control" type="date" name="from_date" id="fromDate" value="{{ currentDate | date('Y-m-d') }}" min="{{ currentDate | date('Y-m-d') }}">
        <label for="fromDate">From Date</label>
    </div>

    <div class="form-floating m-3">
        <input class="form-control" type="date" name="to_date" id="toDate" min="{{ currentDate | date('Y-m-d') }}">
        <label for="toDate">To Date</label>
    </div>

    <div class="form-floating m-3">
        <textarea class="form-control" placeholder="Enter notes..." name="notes" id="notes"></textarea>
        <label for="toDate">Notes</label>
    </div>

    <div class="row justify-content-center m-3">
        <button type="button" class="btn btn-outline-primary btn-lg col-2 m-2" onclick="window.history.back();">Return</button>
        <button type="submit" class="btn btn-primary btn-lg col-2 bg-primary m-2" id="submitBtn" disabled>Create</button>
    </div>

</form>