<div class="border border-primary bg-light rounded p-3">
    <div>
        <h2 class="text-center">Booking Details</h2>
        <div class="d-flex flex-column m-4 text-center fs-4">
            <p>Booked Resource: {{ booking.bookable.code }}</p>
            <p>Booking Confirmation: {{ booking.confirmation }}</p>
            <p>Starting Date: {{ booking.startDate | date('d/m/Y') }}</p>
            <p>End Date: {{ booking.endDate | date('d/m/Y') }}</p>
        </div>
    </div>
    <div class="row justify-content-center m-3">
        <a href="{{ goToPath }}" class="btn btn-primary btn-lg col-3 bg-primary">{{ goToLbl }}</a>
    </div>
</div>