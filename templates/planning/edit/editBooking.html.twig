{% extends '_templates/base.html.twig' %}
{% set module = 'planning' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('editBooking') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('editBooking') }}
{% endblock %}

{% block title %}Edit Booking{% endblock %}

{% block main_header %}Editing Booking {{ booking.confirmation }} for {{ selectedUser.userIdentifier }}{% endblock %}

{% block body %}

    {% include "_parts/breadcrumbs/_editBookingBreadCrumb.html.twig" with { 'editStage': '0' } %}

    {% include "_parts/forms/_inputEditBookingForm.html.twig" with {
        "action": path('app_planning_showconfirmeditbookingpage'),
        "hasErrors": true,
        "hasCsrf": true,
        "csrfName": "_csrf_token",
        "csrfValue": csrf_token('editBooking'),
        "hasSelectedUser": true,
        "selectedUser": selectedUser,
        "booking": booking,
        "allBookables": allBookables,
        "todaysDate": todaysDate,
        "returnTo": "window.history.back();",
        "returnLbl": "Return",
        "submitLbl": "Edit",
    } %}

{% endblock %}