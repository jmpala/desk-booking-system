{% extends '_templates/base.html.twig' %}
{% set module = 'planning' %}

{% block title %}New Booking{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('newBooking') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('newBooking') }}
{% endblock %}

{% block body %}

    <h1 class="mt-4 mb-3 text-center">New Booking for {{ selectedUser.userIdentifier }}</h1>

    {% include "_parts/breadcrumbs/_createBookingBreadCrumb.html.twig" with { 'editStage': '0' } %}

    {% include "_parts/forms/_inputCreateBookingForm.html.twig" with {
        'action': path('app_planning_showconfirmbookingpage'),
        'hasUserId': true,
        'hasErrors': true,
        'hasCsrf': true,
        'csrfName': '_csrf_token',
        'csrfValue': csrf_token('newPlanningBooking'),
        'allBookables': allBookables,
        'todaysDate': todaysDate,
        'returnTo': 'window.history.back();',
        'returnLbl': 'Return',
        'submitLbl': 'Create',
    } %}

{% endblock %}
