{% extends 'login/_parts/_login_template.html.twig' %}

{% block form %}
    <form class="loginform__form py-3 px-1 p-md-3 rounded-3" action="{{ path('app_login') }}" method="post">

        <div class="error-display {{ error ? 'error-display__show' : '' }} alert alert-danger">
            <ul class="m-0 p-0 px-2">
                {% if error %}
                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                {% endif %}
            </ul>
        </div>

        <input type="text" id="email" name="email" value="{{ last_username }}"
               class="loginform__username rounded-2 w-100" required
        >
        <label for="email" class="loginform__usernameLbl w-100">User Name</label>
        <input type="password" id="password" name="password" class="loginform__password rounded-2 w-100"
               required
        >
        <label for="password" class="loginform__passwordLbl w-100">Password</label>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button id="submit-btn" type="submit" class="btn btn-primary loginform__btn">Submit</button>
        <a class="" href="{{ path('app_forgot_password_request') }}">Recover password</a>
        <a class="" href="{{ path('app_register') }}">Register account</a>
    </form>
{% endblock %}
